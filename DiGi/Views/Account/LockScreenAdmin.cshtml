
@using Be;
@{ 
    Layout = "";
}
@model UserModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/PanelAdmin/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="~/PanelAdmin/dist/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" href="~/PanelAdmin/dist/css/custom-style.css">
    <title></title>
</head>
<body class="hold-transition lockscreen">
    <!-- Automatic element centering -->
    <div class="lockscreen-wrapper">
        <div class="lockscreen-logo">
            <a href="../../index2.html"><b>پنل مدیریت</b></a>
        </div>
        <!-- User name -->
        <div class="lockscreen-name">@Model.FirstName @Model.LastName</div>

        <!-- START LOCK SCREEN ITEM -->
        <div class="lockscreen-item">
            <!-- lockscreen image -->
            <div class="lockscreen-image">
                <img src="~/image/users/@Model.pic2" alt="User Image">
            </div>
            <!-- /.lockscreen-image -->
            <!-- lockscreen credentials (contains the form) -->
            <form class="lockscreen-credentials" asp-action="login" asp-controller="Account" method="post">
                <div class="input-group">
                    <input asp-for="Username" value="@Model.Username" maxlength="30" hidden />
                    <input type="password" asp-for="Password" class="form-control" placeholder="رمز عبور" maxlength="30">

                    <div class="input-group-append">
                        <button type="submit" class="btn"><i class="fa fa-arrow-right text-muted"></i></button>
                    </div>
                </div>
            </form>
            <!-- /.lockscreen credentials -->

        </div>

        <!-- /.lockscreen-item -->
        <div class="help-block text-center">
            برای ورود مجدد رمز عبور خود را وارد کنید
        </div>

        <div class="text-center">
            <a href="@Url.Action("LoginAdmin","Account")">و یا با یک یوزرنیم دیگر وارد شوید</a>
        </div>
        <div class="text-center">
            <a href="@Url.Action("Index","Home")">بازشگت به صفحه ی اصلی</a>
        </div>

    </div>
    <!-- /.center -->
    <!-- jQuery -->
    <script src="~/PanelAdmin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/PanelAdmin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>


</body>



</html>