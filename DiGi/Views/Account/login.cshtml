@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UserModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="container">
        <div class="row">
            <form asp-action="login" asp-controller="Account" method="post" class="was-validated " dir="rtl" style=" margin-right: 40%; margin-top: 6%;">


                <div class="form-group">

                    <input type="text" class="form-control" id="uname" placeholder="نام کاربری" asp-for="Username" required>
                    <div class="valid-feedback"> </div>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">

                    <input type="password" class="form-control" id="pwd" placeholder="رمز عبور" asp-for="Password" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback"></div>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember"> من را به خاطر داشته باش

                        <div class="valid-feedback"></div>

                        <div class="invalid-feedback"></div>

                    </label>
                    <div><a href="@Url.Action("signUp","Account")">ثـبت نام نکردی؟</a></div>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 230px; margin-right: 4%;">ورود</button>
            </form>
        </div>
    </div>



</body>
</html>