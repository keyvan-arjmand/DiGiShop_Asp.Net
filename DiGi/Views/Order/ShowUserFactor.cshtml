<div class="content-wrapper" style="min-height: 520.333px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>صورتحساب</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="#">خانه</a></li>
                        <li class="breadcrumb-item active">صورتحساب</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="callout callout-info">
                        <h5><i class="fa fa-info"></i> وضعیت خرید شما :</h5>
                        <div style="color:greenyellow">
                            خرید شما با موفقیت انجام شده
                        </div>
                    </div>
                    @{
                        Products.Factor factor1 = blp.ReadByCodeFactorInFactor(factor.FactorCode);
                    }

                    <!-- Main content -->
                    <div class="invoice p-3 mb-3">
                        <!-- title row -->
                        <div class="row">
                            <div class="col-12">
                                <h4>
                                    <i class="fa fa-globe"></i> فروشگاه دیجی شاپ
                                    <small class="float-left">Date: ۱۳۹۷/۰۹/۳۰</small>
                                </h4>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- info row -->
                        <div class="row invoice-info">
                            <div class="col-sm-4 invoice-col">
                                از
                                <address>
                                    <strong> فروشگاه دیجی شاپ</strong><br>
                                    آدرس<br>
                                    خیابان<br>
                                    تلفن : (۸۰۴) ۱۲۳-۵۴۳۲<br>
                                    ایمیل : info@DiGiShop.ir
                                </address>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                به
                                <address>
                                    <strong>@user.name @user.family</strong><br>
                                    @factor.address<br>
                                    خیابان فلان<br>
                                    تلفن : @user.phoneNumber<br>
                                    ایمیل : @user.email
                                </address>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                <b>کد فاکتور #@factor.FactorCode</b><br>
                                <br>
                                <b>کد سفارش :</b> @factor.Id<br>
                                <b>تاریخ پرداخت :</b> @factor.timePurchase<br>
                                <b>اکانت :</b> @user.Id
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                        <!-- Table row -->
                        <div class="row">
                            <div class="col-12 table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>تعداد</th>
                                            <th>محصول</th>
                                            <th>رنگ</th>
                                            <th>حافظه</th>
                                            <th>قیمت</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in prod)
                                        {
                                            <tr>
                                                <td>۱</td>
                                                <td>@item.nameProduct</td>
                                                <td>@item.Color</td>
                                                <td>@item.memoryCard</td>
                                                <td>@item.price.ToString("n0")$</td>
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->

                        <div class="row">
                            <!-- accepted payments column -->
                            <!-- /.col -->
                            <div class="col-12">
                                <p class="lead">تاریخ پرداخت : @factor.timePurchase</p>

                                <div class="table-responsive">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <th style="width:50%">مبلغ کل :</th>
                                                <td>@factor.totalPrice.ToString("n0")</td>
                                            </tr>
                                            <tr>
                                                <th>مالیات (۹.۳%)</th>
                                                <td>0$</td>
                                            </tr>
                                            <tr>
                                                <th>تخفیف :</th>
                                                <td>0$</td>
                                            </tr>
                                            <tr>
                                                <th>مبلغ پرداخت شده:</th>
                                                <td>@factor.totalPrice.ToString("n0")</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                        <!-- this row will not appear when printing -->
                        <div class="row no-print">
                            <div class="col-12">
                                <a style=" margin-left: 35%;" href="@Url.Action("ShowProfile","Account",new { username = user.username })" class="btn btn-success float-left">
                                    <i class="fa fa-inbox"></i> بازگشت به پروفایل
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /.invoice -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>





